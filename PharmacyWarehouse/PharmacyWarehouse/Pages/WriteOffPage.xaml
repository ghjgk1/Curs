    <Page x:Class="PharmacyWarehouse.Pages.WriteOffPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
          mc:Ignorable="d" 
          Title="Списание товаров">

            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ЗАГОЛОВОК И ПРИЧИНА СПИСАНИЯ -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Списание товаров" Style="{StaticResource H1}"/>

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Причина списания -->
                            <StackPanel Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Причина списания:" Grid.Column="0" 
                                          Style="{StaticResource BodyText}"
                                          VerticalAlignment="Center"/>

                                    <ComboBox x:Name="cmbWriteOffReason" 
                                         Grid.Column="1"
                                         Margin="8,0,8,0">
                                        <ComboBoxItem Content="Просроченный срок годности" IsSelected="True"/>
                                        <ComboBoxItem Content="Повреждение товара"/>
                                        <ComboBoxItem Content="Брак при производстве"/>
                                        <ComboBoxItem Content="Кража"/>
                                        <ComboBoxItem Content="Естественная убыль"/>
                                        <ComboBoxItem Content="Другая причина"/>
                                    </ComboBox>

                                    <TextBox x:Name="txtOtherReason" 
                                        Grid.Column="2"
                                        Visibility="Collapsed"
                                        Width="200"/>
                                </Grid>

                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="290"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="180"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Номер акта:" Grid.Column="0" 
                                          Style="{StaticResource BodyText}"
                                          VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtDocumentNumber" 
                                        Grid.Column="1"
                                        Margin="8,0,0,0"/>

                                    <TextBlock Text="Дата:" Grid.Column="2" 
                                          Style="{StaticResource BodyText}"
                                          VerticalAlignment="Center"
                                          Margin="16,0,0,0"/>
                                    <DatePicker x:Name="dpWriteOffDate" 
                                           Grid.Column="3"
                                           Margin="8,0,0,0"/>
                                </Grid>

                            <!-- Панель выбора -->
                            <Border Grid.Row="0" 
       Background="{StaticResource BackgroundLightBrush}"
       Padding="16"
       BorderBrush="{StaticResource BorderLightBrush}"
       BorderThickness="0,0,0,1"
       CornerRadius="6,6,0,0">
                                <StackPanel>
                                    <TextBlock Text="Выбор товаров для списания" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Фильтры -->
                                        <StackPanel Grid.Column="0">
                                            <WrapPanel>
                                                <CheckBox x:Name="chkShowExpired" 
                             Content="Только просроченные"
                             Margin="0,0,16,0"/>
                                                <CheckBox x:Name="chkShowDamaged" 
                             Content="Только поврежденные"
                             Margin="0,0,16,0"/>
                                                <CheckBox x:Name="chkShowLowStock" 
                             Content="Только с малым остатком"
                             Margin="0,0,16,0"/>
                                            </WrapPanel>

                                            <TextBox x:Name="txtProductSearch" 
                        Margin="0,12,0,0">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Padding" Value="8"/>
                                                        <Setter Property="MinHeight" Value="36"/>
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>

                                        <!-- Кнопки -->
                                        <StackPanel Grid.Column="1" 
                       Orientation="Horizontal"
                       VerticalAlignment="Bottom"
                       Margin="16,0,0,0">
                                            <Button Content="Добавить выбранные" 
                       Style="{StaticResource PrimaryButton}"
                       Width="180"/>
                                            <Button Content="Очистить список" 
                       Style="{StaticResource OutlineButton}"
                       Width="140"
                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                            <!-- Информация -->
                            <Border Grid.Column="1" 
                               Background="{StaticResource BackgroundLightBrush}"
                               Padding="16"
                               BorderBrush="{StaticResource BorderBrush}"
                               BorderThickness="1"
                               CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="Сумма списания" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="txtTotalWriteOff" Text="0.00" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource AccentRedBrush}"/>
                                    <TextBlock Text="руб." Style="{StaticResource Caption}"/>

                                    <Separator Margin="0,8,0,8"/>

                                    <TextBlock Text="Товаров:" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="txtItemsCount" Text="0" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ВЫБОР ТОВАРОВ ДЛЯ СПИСАНИЯ -->
                <Border Style="{StaticResource Card}" Grid.Row="1" Margin="0,16,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                    

                        <!-- Таблица товаров -->
                        <DataGrid x:Name="dgWriteOffs" 
                             Grid.Row="1"
                             AutoGenerateColumns="False"
                             SelectionMode="Extended">

                            <DataGrid.Columns>
                                <!-- Выбор -->
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="chkSelectProduct" 
                                                 IsChecked="{Binding IsSelected}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Товар -->
                                <DataGridTextColumn Header="Товар" 
                                               Width="200"
                                               Binding="{Binding ProductName}"/>

                                <!-- Партия -->
                                <DataGridTextColumn Header="Партия" 
                                               Width="120"
                                               Binding="{Binding BatchNumber}"/>

                                <!-- Срок годности -->
                                <DataGridTextColumn Header="Срок годности" 
                                               Width="120"
                                               Binding="{Binding ExpirationDate, StringFormat='dd.MM.yyyy'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsExpiring}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Доступно -->
                                <DataGridTextColumn Header="Доступно" 
                                               Width="100"
                                               Binding="{Binding AvailableQuantity}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Списать -->
                                <DataGridTemplateColumn Header="Списать" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding WriteOffQuantity}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                TextAlignment="Right"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Цена -->
                                <DataGridTextColumn Header="Цена" 
                                               Width="100"
                                               Binding="{Binding Price, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Сумма -->
                                <DataGridTextColumn Header="Сумма" 
                                               Width="120"
                                               Binding="{Binding WriteOffAmount, StringFormat='N2'}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <!-- Выделение просроченных товаров -->
                                        <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                                        </DataTrigger>
                                        <!-- Выделение товаров с истекающим сроком -->
                                        <DataTrigger Binding="{Binding IsExpiring}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource ProductExpiringBrush}"/>
                                        </DataTrigger>
                                        <!-- Подсветка превышения доступного количества -->
                                        <DataTrigger Binding="{Binding ExceedsAvailable}" Value="True">
                                            <Setter Property="Background" Value="#FFE74C3C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- ПРЕДУПРЕЖДЕНИЯ И КНОПКИ -->
                <StackPanel Grid.Row="2" Orientation="Vertical">

                    <!-- Предупреждение о превышении остатков -->
                    <Border x:Name="warningPanel" 
                       Style="{StaticResource ErrorBox}"
                       Visibility="Collapsed"
                       Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="⚠️ Внимание: превышение доступного количества!" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtWarningMessage" 
                                  TextWrapping="Wrap"
                                  Style="{StaticResource BodyText}"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопки действий -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Проверить остатки" 
                           Style="{StaticResource PrimaryButton}" 
                           Width="150"/>
                        <Button Content="Создать акт списания" 
                           Style="{StaticResource DangerButton}" 
                           Width="180"
                           Margin="12,0,0,0"/>
                    <Button Content="Обновить данные" 
                Style="{StaticResource SecondaryButton}" 
                Margin="8,0,0,0"
                Click="RefreshData_Click"/>
                    <Button Content="Печать акта" 
                           Style="{StaticResource OutlineButton}" 
                           Width="120"
                           Margin="12,0,0,0"/>
                        <Button Content="Отмена" 
                           Style="{StaticResource OutlineButton}" 
                           Width="100"
                           Margin="12,0,0,0"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Page>