<Page x:Class="PharmacyWarehouse.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="ProductsPage"  >
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- ЗАГОЛОВОК И КНОПКИ -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Товары и препараты" Style="{StaticResource H1}"/>

                    <StackPanel Style="{StaticResource ToolbarPanel}">
                        <Button Content="Добавить товар" Style="{StaticResource PrimaryButton}" Width="140" Click="AddProduct_Click"/>
                        <Button Content="Редактировать" Style="{StaticResource SecondaryButton}" Width="120" Margin="8,0,0,0" Click="EditProduct_Click"/>
                        <Button Content="Удалить" Style="{StaticResource WarningButton}" Width="100" Margin="8,0,0,0" Click="DeleteProduct_Click"/>
                        <Button Content="Импорт" Style="{StaticResource OutlineButton}" Width="100" Margin="8,0,0,0"/>
                        <Button Content="Экспорт" Style="{StaticResource OutlineButton}" Width="100" Margin="8,0,0,0"/>

                        <Separator Margin="24,0"/>

                        <Button Content="📊" Style="{StaticResource IconButton}" ToolTip="Отчет по остаткам"/>
                        <Button Content="🖨️" Style="{StaticResource IconButton}" ToolTip="Печать списка"/>
                        <Button Content="⚙️" Style="{StaticResource IconButton}" ToolTip="Настройки отображения"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ФИЛЬТРЫ И ПОИСК -->
            <Border Style="{StaticResource FilterPanel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Фильтры и поиск" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поиск -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Поиск по названию" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <TextBox x:Name="SearchTextBox"
                                         Text="{Binding SearchProduct.Name, UpdateSourceTrigger=PropertyChanged}"
                                         KeyDown="SearchTextBox_KeyDown"/>          
                            </StackPanel>

                            <!-- Категория -->
                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Категория" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbCategory" 
                                          SelectionChanged="CmbCategory_SelectionChanged">
                                </ComboBox>
                            </StackPanel>

                            <!-- Статус -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Статус" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbStatus" SelectionChanged="CmbStatus_SelectionChanged">
                                    <ComboBoxItem Content="Все товары" IsSelected="True"/>
                                    <ComboBoxItem Content="С низким остатком"/>
                                    <ComboBoxItem Content="Нет в наличии"/>
                                    <ComboBoxItem Content="Истекает срок"/>
                                    <ComboBoxItem Content="Просроченные"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Кнопки фильтров -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                                <Button Content="Применить" Style="{StaticResource PrimaryButton}" Width="100" Click="ApplyFilters_Click"/>
                                <Button Content="Сбросить" Style="{StaticResource OutlineButton}" Width="100" Margin="0,8,0,0" Click="ResetFilters_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Статистика фильтров -->
                    <Border Grid.Column="1" 
                           Margin="24,0,0,0"
                           Padding="16"
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="1"
                           CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Статистика" Style="{StaticResource H3}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding ProductsCount, StringFormat='Всего: {0}'}" Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtActiveCount" Text="Найдено: 0" Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtLowStockCount" Text="Низкий остаток: 0" Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtExpiringCount" Text="Истекает срок: 0" Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtExpiredCount" Text="Просрочено: 0" Style="{StaticResource BodyText}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ТАБЛИЦА ТОВАРОВ -->
            <Border Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <Border Grid.Row="0" Style="{StaticResource CardHeader}">
                        <TextBlock Text="Список товаров" Style="{StaticResource H3}" Foreground="{StaticResource TextWhiteBrush}"/>
                    </Border>

                    <DataGrid x:Name="dgProducts" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"  
                              MouseDoubleClick="DgProducts_MouseDoubleClick"
                              SelectionChanged="DgProducts_SelectionChanged"
                              CanUserAddRows="False">

                        <DataGrid.Columns>
                            <!-- Название -->
                            <DataGridTextColumn Header="Название" 
                                                Width="250"
                                                Binding="{Binding Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Категория -->
                            <DataGridTextColumn Header="Категория" 
                                                Width="120"
                                                Binding="{Binding Category.Name, FallbackValue='Без категории'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Форма выпуска -->
                            <DataGridTextColumn Header="Форма выпуска" 
                                                Width="120"
                                                Binding="{Binding ReleaseForm, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Производитель -->
                            <DataGridTextColumn Header="Производитель" 
                                                Width="150"
                                                Binding="{Binding Manufacturer, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Остаток -->
                            <DataGridTextColumn Header="Остаток" 
                                                Width="100"
                                                Binding="{Binding CurrentStock, StringFormat='{}{0:N0}'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,8,0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Рецептурный -->
                            <DataGridCheckBoxColumn Header="Рецепт" 
                                                    Width="80"
                                                    Binding="{Binding RequiresPrescription}"/>

                            <!-- Описание -->
                            <DataGridTextColumn Header="Описание" 
                                                Width="200"
                                                Binding="{Binding Description, FallbackValue='-'}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Статус -->
                            <DataGridTemplateColumn Header="Статус" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusBrush}" 
                                                CornerRadius="12"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <!-- Выделение просроченных товаров -->
                                    <DataTrigger Binding="{Binding HasExpiredBatches}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                                    </DataTrigger>
                                    <!-- Выделение товаров с истекающим сроком -->
                                    <DataTrigger Binding="{Binding HasExpiringBatches}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductExpiringBrush}"/>
                                    </DataTrigger>
                                    <!-- Выделение товаров с низким остатком -->
                                    <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ProductLowStockBrush}"/>
                                    </DataTrigger>
                                    <!-- Выделение отсутствующих товаров -->
                                    <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                        <Setter Property="Background" Value="#FFEBEE"/>
                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>

                    <!-- Итоги -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource BackgroundLightBrush}"
                           BorderBrush="{StaticResource BorderLightBrush}"
                           BorderThickness="0,1,0,0"
                           Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Итоговая информация -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Всего товаров: " Style="{StaticResource BodyText}"/>
                                <TextBlock x:Name="txtTotalProducts" Text="0" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,16,0"/>
                            </StackPanel>


                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="←" Style="{StaticResource IconButton}" ToolTip="Предыдущая страница"/>
                                <TextBlock Text="Страница " VerticalAlignment="Center" Margin="8,0,4,0"/>
                                <TextBox Text="1" Width="40" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text=" из " VerticalAlignment="Center" Margin="4,0,4,0"/>
                                <TextBlock x:Name="txtTotalPages" Text="1" VerticalAlignment="Center"/>
                                <Button Content="→" Style="{StaticResource IconButton}" ToolTip="Следующая страница"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- КНОПКИ МАССОВЫХ ОПЕРАЦИЙ -->
            <Border Style="{StaticResource Card}" Padding="12">
                <StackPanel>
                    <TextBlock Text="Массовые операции" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                    <WrapPanel>
                        <Button Content="Изменить цены" Style="{StaticResource OutlineButton}" Width="140"/>
                        <Button Content="Обновить остатки" Style="{StaticResource OutlineButton}" Width="150" Margin="8,0,0,0" />
                    </WrapPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
