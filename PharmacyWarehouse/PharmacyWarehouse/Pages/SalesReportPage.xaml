<Page x:Class="PharmacyWarehouse.Pages.SalesReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Отчёт по продажам">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="💰" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock Text="Отчёт по продажам" Style="{StaticResource H1}"/>
                <TextBlock Text="Анализ продаж товаров, выручки, себестоимости и прибыли" 
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </StackPanel>

        <!-- Параметры отчёта -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Параметры отчёта" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Период:" Style="{StaticResource Caption}"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker x:Name="dpSalesFrom" Width="120" Margin="0,0,8,0"/>
                            <TextBlock Text="—" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <DatePicker x:Name="dpSalesTo" Width="120"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Товар:" Style="{StaticResource Caption}"/>
                        <ComboBox x:Name="cbSalesProduct" Width="200">
                            <ComboBoxItem Content="Все товары" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Категория:" Style="{StaticResource Caption}"/>
                        <ComboBox x:Name="cbSalesCategory" Width="180">
                            <ComboBoxItem Content="Все категории" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Группировка:" Style="{StaticResource Caption}"/>
                        <ComboBox x:Name="cbSalesGroupBy" Width="150" SelectedIndex="0">
                            <ComboBoxItem Content="По дням"/>
                            <ComboBoxItem Content="По неделям"/>
                            <ComboBoxItem Content="По месяцам"/>
                            <ComboBoxItem Content="По товарам"/>
                            <ComboBoxItem Content="По категориям"/>
                            <ComboBoxItem Content="По поставщикам"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="💰 Сформировать отчёт" Style="{StaticResource PrimaryButton}" 
                            Margin="0,0,8,0"/>
                    <Button Content="🔄 Сбросить фильтры" Style="{StaticResource OutlineButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Статистика продаж -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,12">
            <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="180">
                <StackPanel>
                    <TextBlock Text="Общая выручка" Style="{StaticResource Caption}"/>
                    <TextBlock x:Name="txtTotalRevenue" Text="0 ₽" FontSize="20" 
                               FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="180">
                <StackPanel>
                    <TextBlock Text="Прибыль" Style="{StaticResource Caption}"/>
                    <TextBlock x:Name="txtTotalProfit" Text="0 ₽" FontSize="20" 
                               FontWeight="Bold" Foreground="{StaticResource AccentGreenLightBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="180">
                <StackPanel>
                    <TextBlock Text="Продано товаров" Style="{StaticResource Caption}"/>
                    <TextBlock x:Name="txtTotalSold" Text="0" FontSize="20" 
                               FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBlock Text="шт." Style="{StaticResource Caption}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="180">
                <StackPanel>
                    <TextBlock Text="Средний чек" Style="{StaticResource Caption}"/>
                    <TextBlock x:Name="txtAvgCheck" Text="0 ₽" FontSize="20" 
                               FontWeight="Bold" Foreground="{StaticResource AccentPurpleBrush}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Width="180">
                <StackPanel>
                    <TextBlock Text="Маржа" Style="{StaticResource Caption}"/>
                    <TextBlock x:Name="txtMargin" Text="0 %" FontSize="20" 
                               FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Диаграмма (опционально) -->
        <Border Grid.Row="3" Style="{StaticResource Card}" Margin="0,0,0,12" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Динамика продаж" Style="{StaticResource H3}" Margin="0,0,0,12"/>
                <Border Height="200" Background="{StaticResource BackgroundLightBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        CornerRadius="4">
                    <TextBlock Text="График будет отображаться здесь" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{StaticResource TextLightBrush}" FontStyle="Italic"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Данные отчёта -->
        <DataGrid x:Name="dgSalesReport" Grid.Row="4" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Период / Товар" Width="200"/>
                <DataGridTextColumn Header="Кол-во продаж" Binding="{Binding SalesCount}" Width="100" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="Количество документов продаж"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Продано, шт." Binding="{Binding QuantitySold}" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}"/>
                <DataGridTextColumn Header="Выручка" Binding="{Binding Revenue, StringFormat=\{0:N2\} ₽}" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Себестоимость" Binding="{Binding Cost, StringFormat=\{0:N2\} ₽}" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Прибыль" Binding="{Binding Profit, StringFormat=\{0:N2\} ₽}" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource AccentGreenLightBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Маржа, %" Binding="{Binding MarginPercent, StringFormat=\{0:N1\} %}" Width="100" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MarginPercent}" Value="0">
                                    <Setter Property="Foreground" Value="{StaticResource GrayBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MarginPercent}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MarginPercent}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MarginPercent}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Средняя цена" Binding="{Binding AvgPrice, StringFormat=\{0:N2\} ₽}" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}"/>
                <DataGridTextColumn Header="Доля в выручке" Binding="{Binding RevenueShare, StringFormat=\{0:N1\} %}" Width="100" 
                                    CellStyle="{StaticResource DataGridCellRight}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель экспорта -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="📊 Показать график" Style="{StaticResource SecondaryButton}" 
                    Margin="0,0,8,0"/>
            <Button Content="📄 Печать отчёта" Style="{StaticResource PrimaryButton}" 
                    Margin="0,0,8,0"/>
            <Button Content="💾 Экспорт в Excel" Style="{StaticResource SuccessButton}" 
                    Margin="0,0,8,0" />
            <Button Content="📧 Отправить отчёт" Style="{StaticResource OutlineButton}"/>
        </StackPanel>
    </Grid>
</Page>