<Page x:Class="PharmacyWarehouse.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Отчеты и аналитика">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ВЫБОР ТИПА ОТЧЕТА -->
        <Border Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Отчеты и аналитика" Style="{StaticResource H1}"/>

                <TextBlock Text="Выберите тип отчета" Style="{StaticResource H3}" Margin="0,16,0,12"/>

                <WrapPanel>
                    <Button Content="📦 Остатки товаров" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="📦" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Остатки товаров" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="📊 Движение товаров" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Движение товаров" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="💰 Продажи" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="💰" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Продажи" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="⚠️ Просроченные" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="⚠️" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Просроченные" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="⏳ Истекающие сроки" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="⏳" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Истекающие сроки" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="🏢 Поставщики" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="🏢" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Поставщики" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="📋 Инвентаризации" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="📋" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Инвентаризации" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="🗑️ Списания" 
                           Style="{StaticResource OutlineButton}" 
                           Width="180"
                           Height="60"
                           Margin="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="🗑️" FontSize="20" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Списания" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- ПАРАМЕТРЫ И РЕЗУЛЬТАТЫ ОТЧЕТА -->
        <Border x:Name="reportPanel" 
               Style="{StaticResource Card}" 
               Grid.Row="1" 
               Margin="0,16,0,0"
               Visibility="Collapsed">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок отчета -->
                <Border Grid.Row="0" 
                       Background="{StaticResource BackgroundLightBrush}"
                       Padding="16"
                       BorderBrush="{StaticResource BorderBrush}"
                       BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtReportTitle" Text="Отчет" Style="{StaticResource H2}"/>
                            <TextBlock x:Name="txtReportSubtitle" Text="" Style="{StaticResource Caption}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Обновить" 
                                   Style="{StaticResource PrimaryButton}" 
                                   Width="100"/>
                            <Button Content="Экспорт" 
                                   Style="{StaticResource SecondaryButton}" 
                                   Width="100"
                                   Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Параметры отчета -->
                <Border Grid.Row="1" 
                       Background="{StaticResource BackgroundLightBrush}"
                       Padding="16"
                       BorderBrush="{StaticResource BorderBrush}"
                       BorderThickness="0,0,0,1">

                    <StackPanel>
                        <TextBlock Text="Параметры отчета" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Период с:" Grid.Column="0" 
                                      Style="{StaticResource BodyText}"
                                      VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpDateFrom" 
                                       Grid.Column="1"
                                       SelectedDate="{Binding StartDate}"
                                       Margin="8,0,16,0"/>

                            <TextBlock Text="по:" Grid.Column="2" 
                                      Style="{StaticResource BodyText}"
                                      VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpDateTo" 
                                       Grid.Column="3"
                                       SelectedDate="{Binding EndDate}"
                                       Margin="8,0,16,0"/>

                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                <TextBlock Text="Группировка:" 
                                          Style="{StaticResource BodyText}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                <ComboBox x:Name="cmbGroupBy" 
                                         Width="150">
                                    <ComboBoxItem Content="По дням" IsSelected="True"/>
                                    <ComboBoxItem Content="По неделям"/>
                                    <ComboBoxItem Content="По месяцам"/>
                                    <ComboBoxItem Content="По товарам"/>
                                    <ComboBoxItem Content="По категориям"/>
                                    <ComboBoxItem Content="По поставщикам"/>
                                </ComboBox>

                                <CheckBox x:Name="chkShowChart" 
                                         Content="Показать график"
                                         VerticalAlignment="Center"
                                         Margin="16,0,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Дополнительные фильтры -->
                        <WrapPanel Margin="0,12,0,0">
                            <CheckBox x:Name="chkOnlyActive" 
                                     Content="Только активные товары"
                                     Margin="0,0,16,0"/>
                            <CheckBox x:Name="chkIncludeArchived" 
                                     Content="Включая архивные"
                                     Margin="0,0,16,0"/>
                            <CheckBox x:Name="chkShowZero" 
                                     Content="Показывать нулевые остатки"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Результаты отчета -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Таблица данных -->
                    <DataGrid x:Name="dgReportData" 
                             Grid.Column="0"
                             AutoGenerateColumns="True"
                             IsReadOnly="True"
                             Margin="0,16,8,0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="8,6"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>

                    <!-- График -->
                    <Border x:Name="chartContainer" 
                           Grid.Column="1"
                           Style="{StaticResource Card}"
                           Margin="8,16,0,0"
                           Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Визуализация данных" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                            <!-- Здесь будет размещаться график -->
                            <Border Background="{StaticResource BackgroundLightBrush}"
                                   Height="300"
                                   CornerRadius="4">
                                <TextBlock Text="График будет отображен здесь" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="{StaticResource GrayBrush}"/>
                            </Border>

                            <!-- Легенда графика -->
                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="Легенда" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                                <ItemsControl x:Name="legendItems">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                                <Border Width="12" 
                                                       Height="12" 
                                                       Background="{Binding Color}"
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Label}" Style="{StaticResource BodyText}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Сводка и экспорт -->
                <Border Grid.Row="3" 
                       Background="{StaticResource BackgroundLightBrush}"
                       Padding="16"
                       BorderBrush="{StaticResource BorderBrush}"
                       BorderThickness="0,1,0,0"
                       Margin="0,16,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Сводная информация -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Сводка отчета" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>

                            <WrapPanel>
                                <TextBlock Text="Всего записей: " Style="{StaticResource BodyText}"/>
                                <TextBlock x:Name="txtTotalRecords" Text="0" 
                                          FontWeight="SemiBold"
                                          Margin="0,0,16,0"/>

                                <TextBlock x:Name="txtSummaryLabel" Text="Общая сумма: " Style="{StaticResource BodyText}"/>
                                <TextBlock x:Name="txtSummaryValue" Text="0.00" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource AccentGreenBrush}"
                                          Margin="0,0,16,0"/>
                                <TextBlock Text="руб." Style="{StaticResource Caption}"/>

                                <TextBlock x:Name="txtAvgLabel" Text="Среднее: " Style="{StaticResource BodyText}"/>
                                <TextBlock x:Name="txtAvgValue" Text="0.00" 
                                          FontWeight="SemiBold"
                                          Margin="0,0,16,0"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Кнопки экспорта -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Excel" 
                                   Style="{StaticResource OutlineButton}" 
                                   Width="80">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊" Margin="0,0,4,0"/>
                                            <TextBlock Text="Excel"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            <Button Content="PDF" 
                                   Style="{StaticResource OutlineButton}" 
                                   Width="80"
                                   Margin="8,0,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📄" Margin="0,0,4,0"/>
                                            <TextBlock Text="PDF"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                            <Button Content="Печать" 
                                   Style="{StaticResource PrimaryButton}" 
                                   Width="100"
                                   Margin="8,0,0,0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🖨️" Margin="0,0,4,0"/>
                                            <TextBlock Text="Печать"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</Page>