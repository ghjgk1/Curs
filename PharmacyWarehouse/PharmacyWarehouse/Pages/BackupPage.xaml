<Page x:Class="PharmacyWarehouse.Pages.BackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Резервное копирование">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="💾" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel>
                    <TextBlock Text="Резервное копирование" Style="{StaticResource H1}"/>
                    <TextBlock Text="Создание и восстановление резервных копий базы данных, настройка автоматического архивирования" 
                           Style="{StaticResource Caption}"/>
                </StackPanel>
            </StackPanel>

            <!-- Статус системы -->
            <Border Grid.Row="1" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Статус резервного копирования" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="200">
                            <StackPanel>
                                <TextBlock Text="Последняя резервная копия" Style="{StaticResource Caption}"/>
                                <TextBlock x:Name="txtLastBackup" Text="Не создавалась" FontSize="16" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="200">
                            <StackPanel>
                                <TextBlock Text="Размер БД" Style="{StaticResource Caption}"/>
                                <TextBlock x:Name="txtDbSize" Text="0 МБ" FontSize="16" 
                                       FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Margin="0,0,12,0" Width="200">
                            <StackPanel>
                                <TextBlock Text="Свободное место" Style="{StaticResource Caption}"/>
                                <TextBlock x:Name="txtFreeSpace" Text="0 ГБ" FontSize="16" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}" Width="200">
                            <StackPanel>
                                <TextBlock Text="Авто-бэкап" Style="{StaticResource Caption}"/>
                                <TextBlock x:Name="txtAutoBackupStatus" Text="Выключен" FontSize="16" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Border Style="{StaticResource WarningBox}">
                        <TextBlock Text="⚠️ Рекомендуется создавать резервные копии ежедневно. Последняя копия создана более 7 дней назад." 
                               TextWrapping="Wrap" x:Name="txtWarning" Visibility="Visible"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Основные функции -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель: Создание резервной копии -->
                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Создание резервной копии" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Путь для сохранения:" Style="{StaticResource Caption}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="txtBackupPath" Width="300" 
                                     Text="C:\Backups\PharmacyWarehouse\" IsReadOnly="True"/>
                                <Button Content="📁" Style="{StaticResource IconButton}" 
                                    Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Имя файла:" Style="{StaticResource Caption}"/>
                            <TextBox x:Name="txtBackupFileName" Width="300" 
                                 Text="{Binding BackupFileName}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <CheckBox x:Name="cbCompressBackup" Content="Сжатие (ZIP)" IsChecked="True"/>
                            <CheckBox x:Name="cbVerifyBackup" Content="Проверка целостности" IsChecked="True" Margin="0,8,0,0"/>
                            <CheckBox x:Name="cbEncryptBackup" Content="Шифрование" Margin="0,8,0,0"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Комментарий:" Style="{StaticResource Caption}"/>
                            <TextBox x:Name="txtBackupComment" Height="60" TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="💾 Быстрая копия" Style="{StaticResource SuccessButton}" 
                                Margin="0,0,8,0" />
                            <Button Content="💾 Создать копию" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Правая панель: Восстановление и настройки -->
                <Border Grid.Column="1" Style="{StaticResource Card}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Восстановление и настройки" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                        <!-- Список резервных копий -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Доступные резервные копии:" Style="{StaticResource Caption}"/>
                            <DataGrid x:Name="dgBackups" Height="150" AutoGenerateColumns="False" 
                                  SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Имя файла" Binding="{Binding FileName}" Width="150"/>
                                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="120"/>
                                    <DataGridTextColumn Header="Размер" Binding="{Binding Size}" Width="80"/>
                                    <DataGridCheckBoxColumn Header="Проверена" Binding="{Binding Verified}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Настройки авто+бэкапа -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Автоматическое копирование:" Style="{StaticResource H3}" Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox x:Name="cbEnableAutoBackup" Content="Включить авто-бэкап" 
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="Каждые:" VerticalAlignment="Center" Margin="20,0,8,0"/>
                                <ComboBox x:Name="cbBackupInterval" Width="100" SelectedIndex="0">
                                    <ComboBoxItem Content="1 час"/>
                                    <ComboBoxItem Content="6 часов"/>
                                    <ComboBoxItem Content="12 часов"/>
                                    <ComboBoxItem Content="24 часа"/>
                                    <ComboBoxItem Content="3 дня"/>
                                    <ComboBoxItem Content="7 дней"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Хранить копий:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="txtKeepBackups" Width="50" Text="10"/>
                                <TextBlock Text="(макс. 50)" VerticalAlignment="Center" Margin="8,0,0,0" 
                                       Style="{StaticResource Caption}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="🔄 Восстановить" Style="{StaticResource WarningButton}" 
                                Margin="0,0,8,0" />
                            <Button Content="⚙️ Сохранить настройки" Style="{StaticResource SecondaryButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Панель прогресса и журнал -->
            <Border Grid.Row="3" Style="{StaticResource Card}" Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="Журнал операций" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                    <!-- Прогресс-бар -->
                    <Border x:Name="borderProgress" Style="{StaticResource InfoBox}" Visibility="Collapsed" 
                        Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock x:Name="txtProgressStatus" Text="Создание резервной копии..." 
                                       FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtProgressPercent" Text="0%" Margin="20,0,0,0" 
                                       Foreground="{StaticResource SecondaryBrush}" FontWeight="Bold"/>
                            </StackPanel>
                            <ProgressBar x:Name="progressBackup" Height="10" Minimum="0" Maximum="100" 
                                     Value="0" Background="{StaticResource GrayLightestBrush}">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{StaticResource Secondary}" Offset="0"/>
                                        <GradientStop Color="{StaticResource SecondaryLight}" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                            <TextBlock x:Name="txtProgressDetails" Text="" Style="{StaticResource Caption}" 
                                   Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Журнал операций -->
                    <DataGrid x:Name="dgBackupLog" Height="150" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата и время" 
                                            Binding="{Binding Timestamp, StringFormat=\{0:dd.MM.yyyy HH:mm:ss\}}" Width="150"/>
                            <DataGridTextColumn Header="Операция" Binding="{Binding Operation}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Успешно">
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Ошибка">
                                                <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="В процессе">
                                                <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Файл" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="Размер" Binding="{Binding Size}" Width="80"/>
                            <DataGridTextColumn Header="Детали" Binding="{Binding Details}" Width="250"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель управления журналом -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="🗑️ Очистить журнал" Style="{StaticResource OutlineButton}" 
                            Margin="0,0,8,0" />
                        <Button Content="📄 Экспорт журнала" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Информационная панель -->
            <Border Grid.Row="4" Style="{StaticResource InfoBox}" Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="💡 Рекомендации по резервному копированию:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <StackPanel>
                        <TextBlock Text="• Создавайте резервные копии минимум раз в день" Style="{StaticResource Caption}"/>
                        <TextBlock Text="• Храните копии на отдельном физическом диске или в облаке" Style="{StaticResource Caption}"/>
                        <TextBlock Text="• Проверяйте целостность копий после создания" Style="{StaticResource Caption}"/>
                        <TextBlock Text="• Настройте автоматическое копирование в нерабочее время" Style="{StaticResource Caption}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>