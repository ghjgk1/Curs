<Page x:Class="PharmacyWarehouse.Pages.ExpirationControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Контроль сроков годности">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="⏳" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock Text="Контроль сроков годности" Style="{StaticResource H1}"/>
                <TextBlock Text="Мониторинг партий товаров с истекающим сроком годности" 
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </StackPanel>

        <!-- Статистика и фильтры -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <Border Style="{StaticResource ErrorBox}" Margin="0,0,12,0" Width="180">
                        <StackPanel>
                            <TextBlock Text="ПРОСРОЧЕНО" Style="{StaticResource Caption}" 
                                       Foreground="{StaticResource AccentRedBrush}"/>
                            <TextBlock x:Name="txtExpiredCount" Text="0" FontSize="20" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentRedBrush}"/>
                            <TextBlock Text="партий" Style="{StaticResource Caption}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource WarningBox}" Margin="0,0,12,0" Width="185">
                        <StackPanel>
                            <TextBlock Text="Истекает в течение 7 дней" Style="{StaticResource Caption}" 
                                       Foreground="{StaticResource AccentOrangeBrush}"/>
                            <TextBlock x:Name="txt7DaysCount" Text="0" FontSize="20" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentOrangeBrush}"/>
                            <TextBlock Text="партий" Style="{StaticResource Caption}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource InfoBox}" Margin="0,0,12,0" Width="195">
                        <StackPanel>
                            <TextBlock Text="Истекает в течение 30 дней" Style="{StaticResource Caption}" 
                                       Foreground="{StaticResource SecondaryBrush}"/>
                            <TextBlock x:Name="txt30DaysCount" Text="0" FontSize="20" 
                                       FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}"/>
                            <TextBlock Text="партий" Style="{StaticResource Caption}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource Card}" Width="180">
                        <StackPanel>
                            <TextBlock Text="Общая стоимость" Style="{StaticResource Caption}"/>
                            <TextBlock x:Name="txtTotalValue" Text="0 ₽" FontSize="20" 
                                       FontWeight="Bold" Foreground="{StaticResource AccentPurpleBrush}"/>
                            <TextBlock Text="под угрозой списания" Style="{StaticResource Caption}" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Показать партии со сроком годности:" 
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ComboBox x:Name="cbExpirationFilter" Width="200" SelectedIndex="0">
                        <ComboBoxItem Content="Все партии"/>
                        <ComboBoxItem Content="Просроченные"/>
                        <ComboBoxItem Content="Истекает в течение 7 дней"/>
                        <ComboBoxItem Content="Истекает в течение 30 дней"/>
                        <ComboBoxItem Content="Более 30 дней"/>
                    </ComboBox>

                    <Button Content="🔍 Обновить" Style="{StaticResource PrimaryButton}" 
                            Margin="20,0,0,0"/>
                    <Button Content="📊 Отчёт" Style="{StaticResource SecondaryButton}" 
                            Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список партий -->
        <DataGrid x:Name="dgBatches" Grid.Row="2" Margin="0,12,0,0" AutoGenerateColumns="False">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="-1">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="0">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="1">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="2">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="3">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="4">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="5">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="6">
                            <Setter Property="Background" Value="{StaticResource ProductExpiredBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DaysToExpire}" Value="7">
                            <Setter Property="Background" Value="{StaticResource ProductExpiringBrush}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Партии" Binding="{Binding BatchNumber}" Width="120"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="200"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Product.Manufacturer}" Width="150"/>
                <DataGridTextColumn Header="Дата изготовления" 
                                    Binding="{Binding ArrivalDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Срок годности" 
                                    Binding="{Binding ExpirationDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Осталось дней" Width="100">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} дней">
                            <Binding Path="DaysToExpire"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="-1">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                    <Setter Property="Text" Value="ПРОСРОЧЕНО"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="0">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                    <Setter Property="Text" Value="ПРОСРОЧЕНО"/>
                                </DataTrigger>
                                <Trigger Property="Text" Value="0 дней">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="1">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="2">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="3">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="4">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="5">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="6">
                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="7">
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="8">
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="9">
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DaysToExpire}" Value="10">
                                    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="100" 
                                    CellStyle="{StaticResource DataGridCellCenter}"/>
                <DataGridTextColumn Header="Цена закупки" Binding="{Binding PurchasePrice, StringFormat=\{0:N2\} ₽}" 
                                    Width="120" CellStyle="{StaticResource DataGridCellRight}"/>
                <DataGridTextColumn Header="Общая стоимость" Width="120" 
                                    CellStyle="{StaticResource DataGridCellRight}">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0:N2} ₽">
                            <Binding Path="TotalValue"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Действия" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource IconButton}" Tag="{Binding Id}">
                                    <TextBlock Text="📤" ToolTip="Списать"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Tag="{Binding Id}">
                                    <TextBlock Text="⬆️" ToolTip="Переместить вперед"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Tag="{Binding Id}">
                                    <TextBlock Text="🔔" ToolTip="Уведомить"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель действий -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="📤 Массовое списание" Style="{StaticResource DangerButton}"/>
            <Button Content="📧 Отправить отчёт" Style="{StaticResource SecondaryButton}"/>
            <Button Content="🖨️ Печать акта" Style="{StaticResource OutlineButton}" />
        </StackPanel>
    </Grid>
</Page>
