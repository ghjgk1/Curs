<Page x:Class="PharmacyWarehouse.Pages.TransferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Перемещение товаров">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="🔄" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock Text="Перемещение товаров" Style="{StaticResource H1}"/>
                <TextBlock Text="Перемещение товаров между складами, зонами хранения или ответственными лицами" 
                           Style="{StaticResource Caption}"/>
            </StackPanel>
        </StackPanel>

        <!-- Шапка документа -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Документ перемещения" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Номер:" Style="{StaticResource Caption}"/>
                                <TextBox x:Name="txtDocNumber" Width="150" Text="ПЕР-" 
                                         Background="{StaticResource BackgroundLightBrush}" IsReadOnly="True"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Дата:" Style="{StaticResource Caption}"/>
                                <DatePicker x:Name="dpTransferDate" Width="120"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Ответственный:" Style="{StaticResource Caption}"/>
                            <TextBox x:Name="txtResponsible" Width="300" 
                                     Text="{Binding UserName}" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="1">
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Откуда (склад/зона):" Style="{StaticResource Caption}"/>
                            <ComboBox x:Name="cbFromLocation" Width="300">
                                <ComboBoxItem Content="Основной склад (Склад №1)"/>
                                <ComboBoxItem Content="Резервный склад (Склад №2)"/>
                                <ComboBoxItem Content="Торговый зал"/>
                                <ComboBoxItem Content="Кабинет врача"/>
                                <ComboBoxItem Content="Холодильная камера"/>
                                <ComboBoxItem Content="Карантинная зона"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Куда (склад/зона):" Style="{StaticResource Caption}"/>
                            <ComboBox x:Name="cbToLocation" Width="300">
                                <ComboBoxItem Content="Основной склад (Склад №1)"/>
                                <ComboBoxItem Content="Резервный склад (Склад №2)"/>
                                <ComboBoxItem Content="Торговый зал"/>
                                <ComboBoxItem Content="Кабинет врача"/>
                                <ComboBoxItem Content="Холодильная камера"/>
                                <ComboBoxItem Content="Карантинная зона"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Основание (комментарий):" Style="{StaticResource Caption}"/>
                    <TextBox x:Name="txtComment" Height="60" TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto" 
                             ToolTip="Укажите причину перемещения или номер основания"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Добавление товаров -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,12,0,12">
            <StackPanel>
                <TextBlock Text="Товары для перемещения" Style="{StaticResource H3}" Margin="0,0,0,12"/>

                <!-- Панель добавления товара -->
                <Border Style="{StaticResource FilterPanel}" Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Товар:" Style="{StaticResource Caption}"/>
                                <ComboBox x:Name="cbProduct" Width="250" DisplayMemberPath="Name"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Партия:" Style="{StaticResource Caption}"/>
                                <ComboBox x:Name="cbBatch" Width="180" DisplayMemberPath="BatchNumber"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Доступно:" Style="{StaticResource Caption}"/>
                                <TextBlock x:Name="txtAvailable" Text="0" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentGreenBrush}" 
                                           VerticalAlignment="Center" MinWidth="40"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Количество:" Style="{StaticResource Caption}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="txtQuantity" Width="80" Text="1"/>
                                    <TextBlock x:Name="txtUnit" Text="шт." Margin="8,0,0,0" 
                                               VerticalAlignment="Center" Style="{StaticResource Caption}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Border x:Name="borderError" Style="{StaticResource ErrorBox}" 
                                Visibility="Collapsed" Margin="0,8,0,0">
                            <TextBlock x:Name="txtError" Text="Ошибка" TextWrapping="Wrap"/>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="➕ Добавить в список" Style="{StaticResource SuccessButton}"/>
                            <Button Content="🗑️ Очистить форму" Style="{StaticResource OutlineButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Список товаров для перемещения -->
                <DataGrid x:Name="dgTransferItems" AutoGenerateColumns="False" Height="250">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Width="40">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Index"/>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="200"/>
                        <DataGridTextColumn Header="Партия" Binding="{Binding BatchNumber}" Width="120"/>
                        <DataGridTextColumn Header="Срок годности" 
                                            Binding="{Binding ExpirationDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100" 
                                            CellStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="Ед. изм." Binding="{Binding UnitOfMeasure}" Width="80"
                                            CellStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="150"/>
                        <DataGridTemplateColumn Header="Действия" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource IconButton}" 
                                                Tag="{Binding TempId}">
                                            <TextBlock Text="✏️" ToolTip="Изменить"/>
                                        </Button>
                                        <Button Style="{StaticResource IconButton}" 
                                                Tag="{Binding TempId}">
                                            <TextBlock Text="🗑️" ToolTip="Удалить"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Итоги -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <TextBlock Text="Итого позиций:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtTotalItems" Text="0" FontWeight="Bold" Margin="0,0,20,0"/>

                    <TextBlock Text="Общее количество:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtTotalQuantity" Text="0" FontWeight="Bold" 
                               Foreground="{StaticResource SecondaryBrush}" Margin="0,0,20,0"/>

                    <TextBlock Text="Уникальных товаров:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtUniqueProducts" Text="0" FontWeight="Bold" 
                               Foreground="{StaticResource AccentPurpleBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Панель действий -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="📋 Предварительный просмотр" Style="{StaticResource OutlineButton}"/>
            <Button Content="💾 Сохранить черновик" Style="{StaticResource SecondaryButton}"/>
            <Button Content="🔄 Провести перемещение" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Page>