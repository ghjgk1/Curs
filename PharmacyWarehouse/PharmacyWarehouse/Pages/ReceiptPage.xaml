<Page x:Class="PharmacyWarehouse.Pages.ReceiptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharmacyWarehouse.Pages"
      mc:Ignorable="d" 
      Title="Приход товара">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ЗАГОЛОВОК И ИНФОРМАЦИЯ О ДОКУМЕНТЕ -->
        <Border Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Приходная накладная" Style="{StaticResource H1}"/>

                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Информация о документе -->
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Номер:" Grid.Column="0" Style="{StaticResource BodyText}"/>
                            <TextBlock x:Name="txtDocNumber" Text="Новый" 
                                      Grid.Column="1" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource PrimaryBrush}"/>
                        </Grid>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Дата:" Grid.Column="0" Style="{StaticResource BodyText}"/>
                            <DatePicker x:Name="dpDocDate" 
                                       Grid.Column="1"
                                       />
                        </Grid>
                    </StackPanel>

                    <!-- Поставщик и склад -->
                    <StackPanel Grid.Column="1" Margin="24,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Поставщик:" Grid.Column="0" Style="{StaticResource BodyText}"/>
                            <ComboBox x:Name="cmbSupplier" 
                                     Grid.Column="1"
                                     DisplayMemberPath="Name"
                                     SelectedValuePath="SupplierId"/>
                        </Grid>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Склад:" Grid.Column="0" Style="{StaticResource BodyText}"/>
                            <ComboBox x:Name="cmbWarehouse" Grid.Column="1">
                                <ComboBoxItem Content="Основной склад" IsSelected="True"/>
                                <ComboBoxItem Content="Холодильник"/>
                                <ComboBoxItem Content="Наркотики"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>

                    <!-- Статус документа -->
                    <Border Grid.Column="2" 
                           Background="{StaticResource BackgroundLightBrush}"
                           Padding="16"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Статус" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                            <Border Background="{StaticResource AccentOrangeBrush}" 
                                   CornerRadius="12"
                                   Padding="8,4">
                                <TextBlock Text="Черновик" 
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Сумма" Style="{StaticResource BodyText}" Margin="0,12,0,4"/>
                            <TextBlock x:Name="txtTotalAmount" Text="0.00" 
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentGreenBrush}"/>
                            <TextBlock Text="руб." Style="{StaticResource Caption}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ДОБАВЛЕНИЕ ТОВАРА -->
        <Border Style="{StaticResource Card}" Grid.Row="1" Margin="0,16,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Панель добавления -->
                <Border Grid.Row="0" 
                       Background="{StaticResource BackgroundLightBrush}"
                       Padding="16"
                       BorderBrush="{StaticResource BorderLightBrush}"
                       BorderThickness="0,0,0,1"
                       CornerRadius="6,6,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Товар" Grid.Column="0" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                        <TextBlock Text="Количество" Grid.Column="1" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                        <TextBlock Text="Цена" Grid.Column="2" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                        <TextBlock Text="Сумма" Grid.Column="3" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                        <TextBlock Text="Партия" Grid.Column="4" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>

                        <ComboBox x:Name="cmbProduct" Grid.Column="0" Grid.Row="1" Margin="0,8,8,0"/>
                        <TextBox x:Name="txtQuantity" Grid.Column="1" Grid.Row="1" Text="1" Margin="0,8,8,0"/>
                        <TextBox x:Name="txtPrice" Grid.Column="2" Grid.Row="1" Margin="0,8,8,0"/>
                        <TextBlock x:Name="txtLineTotal" Grid.Column="3" Grid.Row="1" 
                                  Text="0.00" 
                                  Style="{StaticResource BodyText}"
                                  VerticalAlignment="Center"
                                  Margin="0,8,8,0"/>
                        <TextBox x:Name="txtBatch" Grid.Column="4" Grid.Row="1" Margin="0,8,8,0"/>
                        <Button Content="Добавить" Grid.Column="5" Grid.Row="1" 
                               Style="{StaticResource PrimaryButton}"
                               Width="100"
                               Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Таблица позиций -->
                <DataGrid x:Name="dgItems" 
                         Grid.Row="1"
                         AutoGenerateColumns="False"
                         ItemsSource="{Binding DocumentItems}"
                         Margin="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Width="40">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Товар" Width="250" Binding="{Binding ProductName}"/>
                        <DataGridTextColumn Header="Количество" Width="100" Binding="{Binding Quantity}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Цена" Width="100" Binding="{Binding Price, StringFormat='N2'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Сумма" Width="120" Binding="{Binding Total, StringFormat='N2'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Партия" Width="150" Binding="{Binding BatchNumber}"/>

                        <DataGridTextColumn Header="Срок годности" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" 
                                           Style="{StaticResource DangerButton}"
                                           Padding="8,4"
                                           FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Итоги -->
                <Border Grid.Row="2" 
                       Background="{StaticResource BackgroundLightBrush}"
                       Padding="16"
                       BorderBrush="{StaticResource BorderLightBrush}"
                       BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Позиций: " Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="txtItemsCount" Text="0" FontWeight="SemiBold" Margin="0,0,24,0"/>

                        <TextBlock Text="Итого количество: " Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="txtTotalQuantity" Text="0" FontWeight="SemiBold" Margin="0,0,24,0"/>

                        <TextBlock Text="Общая сумма: " Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="txtDocumentTotal" Text="0.00" 
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentGreenBrush}"/>
                        <TextBlock Text=" руб." Style="{StaticResource BodyText}" Margin="4,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- КНОПКИ ДЕЙСТВИЙ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить черновик" Style="{StaticResource OutlineButton}" Width="150"/>
            <Button Content="Провести документ" Style="{StaticResource SuccessButton}" Width="150" Margin="12,0,0,0"/>
            <Button Content="Печать" Style="{StaticResource SecondaryButton}" Width="100" Margin="12,0,0,0"/>
            <Button Content="Отмена" Style="{StaticResource DangerButton}" Width="100" Margin="12,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>