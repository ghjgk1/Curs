<Window x:Class="PharmacyWarehouse.Windows.AddEditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyWarehouse.Windows"
        mc:Ignorable="d"
        Title="Поставщик" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="4"
                Padding="12">
            <TextBlock Text="{Binding WindowTitle}" 
                      Foreground="White"
                      FontSize="18"
                      FontWeight="Bold"/>
        </Border>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
            <StackPanel>
                <!-- Основная информация -->
                <Border BorderBrush="{StaticResource BorderLightBrush}"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="16"
                       Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Основная информация" 
                                  Style="{StaticResource H3}"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="Название *"/>
                        <TextBox x:Name="txtName"
                                 Text="{Binding Supplier.Name, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Телефон"/>
                        <TextBox x:Name="txtPhone"
                                 Text="{Binding Supplier.Phone, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Контактное лицо"/>
                        <TextBox x:Name="txtContactPerson"
                                 Text="{Binding Supplier.ContactPerson, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Border>

                <!-- Дополнительная информация -->
                <Border BorderBrush="{StaticResource BorderLightBrush}"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="16">
                    <StackPanel>
                        <TextBlock Text="Дополнительная информация" 
                                  Style="{StaticResource H3}"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="Адрес"/>
                        <TextBox x:Name="txtAddress"
                                 Text="{Binding Supplier.Address, UpdateSourceTrigger=PropertyChanged}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>

                        <TextBlock Text="Email"/>
                        <TextBox x:Name="txtEmail"
                                 Text="{Binding Supplier.Email, UpdateSourceTrigger=PropertyChanged}"/>

                        <CheckBox x:Name="chkIsActive"
                                  Content="Активный поставщик"
                                  IsChecked="{Binding Supplier.IsActive}"
                                  Margin="0,8,0,0"/>

                        <TextBlock Text="Примечания" Margin="0,12,0,4"/>
                        <TextBox x:Name="txtNotes"
                                 Text="{Binding Supplier.Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,16,0,0"
                Padding="0,12,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" 
                        Style="{StaticResource PrimaryButton}"
                        Width="100"
                        IsDefault="True"
                        Click="Save_Click"/>

                <Button Content="Отмена" 
                        Style="{StaticResource OutlineButton}"
                        Width="100"
                        Margin="8,0,0,0"
                        IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>